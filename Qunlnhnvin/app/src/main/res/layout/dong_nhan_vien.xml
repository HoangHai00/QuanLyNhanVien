<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:layout_margin="5sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearlayoutNhanVien"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal"
    android:layout_weight="2"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:scaleType="fitXY"
            android:id="@+id/imageViewAnhNhanVien"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_marginRight="5sp"
                android:id="@+id/buttonSua"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Sửa"
                android:background="#70A1FF"/>

            <Button
                android:layout_marginRight="5sp"
                android:background="#70a1ff"
                android:id="@+id/buttonXoa"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Xóa" />
            <Button
                android:layout_marginRight="10sp"
                android:background="#70a1ff"
                android:id="@+id/btnXemChiTiet"
                android:text="Chi Tiết"
                android:layout_width="80dp"
                android:layout_height="40dp"/>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayoutMota"
        android:layout_width="150sp"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:background="#FFCCCC"
            android:padding="2sp"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:id="@+id/textviewTen"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Họ và tên:" />

        <TextView
            android:background="#FFCCCC"
            android:padding="2sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="5sp"
            android:textSize="20sp"
            android:id="@+id/textViewSDT"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Số điện thoại:" />

        <TextView
            android:background="#FFCCCC"
            android:padding="2sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginTop="5sp"
            android:textSize="20sp"
            android:id="@+id/textViewEmail"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Email:" />

        <TextView
            android:background="#FFCCCC"
            android:padding="2sp"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="20sp"
            android:layout_marginTop="5sp"
            android:id="@+id/textViewDiaChi"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="Địa Chỉ:" />
    </LinearLayout>



</LinearLayout>
